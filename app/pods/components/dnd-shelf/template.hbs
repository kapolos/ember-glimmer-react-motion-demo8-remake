<style media="screen">
  #test1 {
    width: 400px;
    min-height: 400px;
    margin: 0 auto;
    z-index: 0;
    position: relative;
  }

  .sortableItem {
    width: 90%;
    max-width: 300px;
    height: 90px;
    border: none;
    border-radius: 4px;
    color: black;
    background-color: white;
    display: block;
    margin: 0 auto;
    box-shadow: rgba(0, 0, 0, 0.2) 0px 1px 2px 0px;
    line-height: 90px;
    padding-left: 4%;
    cursor: pointer;
    overflow: visible;
    pointer-events: auto;
    transform-origin: 50% 50% 0;
    position: absolute;
    z-index: 0;
    transition: top 0.2s ease;
  }

  .noselect {
    -webkit-touch-callout: none;
    -webkit-user-select: none;
    -khtml-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
  }
</style>
<div class="" id="test1">
  {{#each items as |item|}}
    {{dnd-item
      newY=newY
      itemClicked="itemClicked"
      activeItem=activeItem
      item=item
      items=items}}
  {{/each}}
</div>
